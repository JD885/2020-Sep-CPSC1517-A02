<connectionStrings>
  <!-- the connection string tag will allow one to specific a connection to
       a database.
       you may have several connection strings pointing to the same database OR
       separate databases
       
       name is the name your program will use to access this connection string
       connectionString points to your database: the server source; database name; security access
       providerName indicates the client requirement for your database type-->
  <add name="NWDB"
        connectionString="Data Source=.; Initial Catalog=Northwind_CPSC1517; Integrated Security=true"
        providerName="System.Data.SqlClient"/>

</connectionStrings>
